<Page x:ConnectionId='1'
    x:Class="SDKTemplate.Scenario1_EventAndMenuHookup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <Style x:Key="PaddedPanel" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Vertical" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="Margin" Value="5,0,0,5" />
        </Style>

        <Style x:Key="ButtonGroup" BasedOn="{StaticResource PaddedPanel}" TargetType="StackPanel">
            <Setter Property="BorderBrush" Value="WhiteSmoke" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid x:ConnectionId='2' x:Name="RootGrid" Margin="12,10,12,12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Description:" Style="{StaticResource SampleHeaderTextStyle}"/>
                <TextBlock Style="{StaticResource ScenarioDescriptionTextStyle}" TextWrapping="Wrap">
                    Radial Controller Events Hookup to events and adding menu items using known and custom icons.
                </TextBlock>
            </StackPanel>

            <ScrollViewer Grid.Row="1">
                <StackPanel Orientation="Vertical">
                    <GridView IsItemClickEnabled="False" SelectionMode="None">
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsWrapGrid Orientation="Horizontal" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" />
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>

                        <StackPanel Style="{StaticResource ButtonGroup}">
                            <Image Height="64" Width="64" HorizontalAlignment="Left" Source="Assets\Item0.png"/>
                            <Button x:ConnectionId='33' x:Name="AddButton0" Content="Add Item 0"                 CommandParameter="0"/>
                            <Button x:ConnectionId='34' x:Name="SelectButton0" Content="Select Item 0"                    CommandParameter="0"/>
                            <Button x:ConnectionId='35' x:Name="RemoveButton0" Content="Remove Item 0"                    CommandParameter="0"/>
                            <Slider x:ConnectionId='36' x:Name="Slider0" />
                            <ToggleSwitch x:ConnectionId='37' x:Name="Toggle0" />
                        </StackPanel>

                        <StackPanel Style="{StaticResource ButtonGroup}">
                            <Image Height="64" Width="64" HorizontalAlignment="Left" Source="Assets\Item1.png"/>
                            <Button x:ConnectionId='28' x:Name="AddButton1" Content="Add Item 1"                 CommandParameter="1"/>
                            <Button x:ConnectionId='29' x:Name="SelectButton1" Content="Select Item 1"                    CommandParameter="1"/>
                            <Button x:ConnectionId='30' x:Name="RemoveButton1" Content="Remove Item 1"                    CommandParameter="1"/>
                            <Slider x:ConnectionId='31' x:Name="Slider1" />
                            <ToggleSwitch x:ConnectionId='32' x:Name="Toggle1" />
                        </StackPanel>

                        <StackPanel Style="{StaticResource ButtonGroup}">
                            <Image Height="64" Width="64" HorizontalAlignment="Left" Source="Assets\Item2.png"/>
                            <Button x:ConnectionId='23' x:Name="AddButton2" Content="Add Item 2"                 CommandParameter="2"/>
                            <Button x:ConnectionId='24' x:Name="SelectButton2" Content="Select Item 2"                    CommandParameter="2"/>
                            <Button x:ConnectionId='25' x:Name="RemoveButton2" Content="Remove Item 2"                    CommandParameter="2"/>
                            <Slider x:ConnectionId='26' x:Name="Slider2" />
                            <ToggleSwitch x:ConnectionId='27' x:Name="Toggle2" />
                        </StackPanel>

                        <StackPanel Style="{StaticResource ButtonGroup}">
                            <Image Height="64" Width="64" HorizontalAlignment="Left" Source="Assets\Item3.png"/>
                            <Button x:ConnectionId='18' x:Name="AddButton3" Content="Add Item 3"                 CommandParameter="3"/>
                            <Button x:ConnectionId='19' x:Name="SelectButton3" Content="Select Item 3"                    CommandParameter="3"/>
                            <Button x:ConnectionId='20' x:Name="RemoveButton3" Content="Remove Item 3"                    CommandParameter="3"/>
                            <Slider x:ConnectionId='21' x:Name="Slider3" />
                            <ToggleSwitch x:ConnectionId='22' x:Name="Toggle3" />
                        </StackPanel>

                        <StackPanel Style="{StaticResource ButtonGroup}">
                            <Image Height="64" Width="64" HorizontalAlignment="Left" Source="Assets\Item4.png"/>
                            <Button x:ConnectionId='13' x:Name="AddButton4" Content="Add Item 4"                 CommandParameter="4"/>
                            <Button x:ConnectionId='14' x:Name="SelectButton4" Content="Select Item 4"                    CommandParameter="4"/>
                            <Button x:ConnectionId='15' x:Name="RemoveButton4" Content="Remove Item 4"                    CommandParameter="4"/>
                            <Slider x:ConnectionId='16' x:Name="Slider4" />
                            <ToggleSwitch x:ConnectionId='17' x:Name="Toggle4" />
                        </StackPanel>

                        <StackPanel Style="{StaticResource ButtonGroup}">
                            <Image Height="64" Width="64" HorizontalAlignment="Left" Source="Assets\Item5.png"/>
                            <Button x:ConnectionId='8' x:Name="AddButton5" Content="Add Item 5"                 CommandParameter="5"/>
                            <Button x:ConnectionId='9' x:Name="SelectButton5" Content="Select Item 5"                    CommandParameter="5"/>
                            <Button x:ConnectionId='10' x:Name="RemoveButton5" Content="Remove Item 5"                    CommandParameter="5"/>
                            <Slider x:ConnectionId='11' x:Name="Slider5" />
                            <ToggleSwitch x:ConnectionId='12' x:Name="Toggle5" />
                        </StackPanel>
                    </GridView>

                    <StackPanel Style="{StaticResource PaddedPanel}" Orientation="Horizontal">
                        <Button x:ConnectionId='5' x:Name="GetSelected" Content="Get Selected Item"                          />
                        <Button x:ConnectionId='6' x:Name="SelectPreviousItem" Content="Select Previous Item"                                      Margin="5,5,10,0"/>
                        <ToggleSwitch x:ConnectionId='7'                                                                   >Haptics</ToggleSwitch>
                    </StackPanel>

                    <StackPanel Style="{StaticResource PaddedPanel}">
                        <TextBlock FontSize="20">Log</TextBlock>
                        <ScrollViewer x:ConnectionId='3' x:Name="logViewer" Grid.Column="0" MaxHeight="300" Padding="0,0,20,0">
                            <TextBlock x:ConnectionId='4' x:Name="log"                               />
                        </ScrollViewer>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>

